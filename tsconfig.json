{
  "compilerOptions": {
    "target": "ES2020",                  // Versão JS alvo, ES2020 é bom meio termo
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,                    // Permite usar arquivos JS também
    "skipLibCheck": true,               // Pula checagem de tipos de libs externas
    "strict": true,                     // Ativa checagem rígida
    "noEmit": true,                     // Não gera saída, pois Next cuida disso
    "esModuleInterop": true,            // Importação compatível CommonJS/ESM
    "module": "commonjs",               // CommonJS para rodar scripts com ts-node
    "moduleResolution": "node",         // Resolver módulos como node
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",                  // Next lida com JSX, preserve deixa como está
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
