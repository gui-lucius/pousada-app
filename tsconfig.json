{
  "compilerOptions": {
    "target": "ES2020",                  
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,                    
    "skipLibCheck": true,               
    "strict": true,                     
    "noEmit": true,                     
    "esModuleInterop": true,            
    "module": "commonjs",               
    "moduleResolution": "node",         
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",                 
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
